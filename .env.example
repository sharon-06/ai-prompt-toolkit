# AI Prompt Toolkit Configuration
# Copy this file to .env and update the values as needed

# Application Settings
APP_NAME=AI Prompt Toolkit
APP_VERSION=0.1.0
DEBUG=false
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Default LLM Provider (ollama, openai, bedrock, anthropic)
DEFAULT_LLM_PROVIDER=ollama

# Database Configuration
DATABASE_URL=sqlite:///./ai_prompt_toolkit.db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis Configuration (for caching and task queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your_redis_password
# REDIS_URL=redis://localhost:6379/0

# Ollama Configuration (Local LLM)
OLLAMA_ENABLED=true
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:latest
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=2048
OLLAMA_TIMEOUT=60

# OpenAI Configuration
OPENAI_ENABLED=false
# OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2048
# OPENAI_ORGANIZATION=your_org_id

# AWS Bedrock Configuration
BEDROCK_ENABLED=false
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
BEDROCK_MODEL=anthropic.claude-v2
BEDROCK_TEMPERATURE=0.7
BEDROCK_MAX_TOKENS=2048

# Anthropic Configuration
ANTHROPIC_ENABLED=false
# ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_MAX_TOKENS=2048

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production-please
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENABLE_PROMPT_INJECTION_DETECTION=true
MAX_PROMPT_LENGTH=10000

# Prompt Optimization Configuration
OPTIMIZATION_ENABLED=true
OPTIMIZATION_MAX_ITERATIONS=5
OPTIMIZATION_TARGET_COST_REDUCTION=0.2
OPTIMIZATION_PERFORMANCE_THRESHOLD=0.8
OPTIMIZATION_USE_GENETIC_ALGORITHM=true
OPTIMIZATION_POPULATION_SIZE=10
